[user]
	email = atemu.main@gmail.com
	name = Atemu

[includeIf "gitdir/i:~/Work/"]
	path = ~/Work/.gitconfig
[includeIf "gitdir/i:~/Uni/"]
	path = ~/Uni/.gitconfig

[core]
	# Do not run arbitrary code downloaded off the internet, wtf git?
	hooksPath = /dev/null
	pager = delta
	# fsmonitor = true
	untrackedcache = true
	commitGraph = true
	multiPackIndex = true

[diff]
	colorMoved = default
	ignoreSubmodules = untracked

[fetch]
	prune = true

[merge]
	tool = vimdiff
	conflictStyle = zdiff3
	stat = false
[advice]
	detachedHead = off
[diff "mozlz4"]
	textconv = mozlz4a -d /dev/stdin /dev/stdout <
	binary = true

[annex]
	genmetadata = true
	adjustedbranchrefresh = 2 # refresh adjusted branches after every change
	autocommit = false
	diskreserve = 1G # Default of 256M is often not enough for a repack
	jobs = 2
	synccontent = no

[github]
	user = Atemu

[interactive]
    diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true
	max-line-length = 2048
