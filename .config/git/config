[user]
	email = atemu.main@gmail.com
	name = Atemu

[includeIf "gitdir/i:~/work/"]
	path = ~/work/.gitconfig
[includeIf "gitdir/i:~/Uni/"]
	path = ~/Uni/.gitconfig

[core]
	pager = delta

[diff]
	colorMoved = default

[fetch]
	prune = true

[merge]
	tool = vimdiff
[advice]
	detachedHead = off
[diff "mozlz4"]
	textconv = mozlz4a -d /dev/stdin /dev/stdout <
	binary = true

[annex]
	genmetadata = true
	adjustedbranchrefresh = 2 # refresh adjusted branches after every change
	autocommit = false
	diskreserve = 1G # Default of 256M is often not enough for a repack

[github]
	user = Atemu

[interactive]
    diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true
